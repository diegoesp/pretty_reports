<% provide(:title, 'Import Pivotal Wizard') %>
<% provide(:page_id, "import-pivotal-wizard") %>

<% content_for :head do %>
  <script type="text/javascript">
    // Initialize the js for this particular page when the DOM is ready.
    $(document).ready(function() {
      $("#pivotal_api_token").get(0).focus();
    });
  </script>
<% end %>

<div class="container">
  <h1>Importing your stories from Pivotal Tracker</h1>
  <h2>Step #1 / #4: Set your pivotal API so I can show look for the stories</h2>
  <%= form_tag(wizard_path, :method => "put") do %>
    <label>Pivotal API Token</label>
    <input type="text" id="pivotal_api_token" name="pivotal_api_token" size="37" value="<%= @import_pivotal.api_token %>" />

    <div class="wizard-buttons-container">
      <input type="submit" value="Next" />
    </div>
  <% end %>
</div>