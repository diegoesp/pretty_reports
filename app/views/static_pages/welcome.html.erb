<% provide(:title, 'Welcome!') %>
<% provide(:page_id, "welcome-page") %>

<header>
  <div class="logo"></div>

  <div class="buttons-container">
    <%
      if current_user.blank?
    %>
      <%= link_to "Sign Up",
        {controller: 'devise/registrations', action: 'new'},
        :class => 'button green-button' %>

      <%= link_to "Sign in",
        {controller: 'devise/sessions', action: 'new'},
        :class => 'button blue-button' %>
    <%
    else    
    %>
      <%= link_to "Sign out",
      {controller: 'devise/sessions', action: 'destroy'},
      :class => 'button green-button' %>

      <%= link_to "Reports",
        "/home",
        :class => 'button blue-button' %>
    <%
    end
    %>

  </div>

</header>

<div class="title-box">
  <h1>
    Welcome to <span class="strong">pretty reports</span> awesome tool for creating
    reports.
  </h1>
  <br/>
  <h2>
    Entering data has never been easier
  </h2>
</div>

<section class="banner">
</section>

<%= render "layouts/footer" %>
