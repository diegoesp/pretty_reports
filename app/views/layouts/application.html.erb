<!DOCTYPE html>
<html>

  <head>
    <title>PrettyReports</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>

    <%= yield :head %>
  </head>

  <body id=<%=yield :page_id%> dummy="">
    
    <%# Active admin notifications %>
    <%
    if notice != nil
    %>
      <p class="notice"><%= notice %></p>
    <%
    end

    if alert != nil
    %>
      <p class="alert"><%= alert %></p>  
    <%
    end
    %>
    <%# Active admin notifications end %>

    <%= yield %>

  </body>

</html>
