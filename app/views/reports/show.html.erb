<% content_for :head do %>
  <script type="text/javascript">
    // Initialize the js for this particular page when the DOM is ready.
    $(document).ready(function() {
      app.reports.initialize({items: <%= @report.items.to_json.html_safe %>});
    });
  </script>
<% end %>

<% if @report.report_type == 'sprint-definition' %>
  <%= render 'reports/sprint_definition/sprint_definition', locals: {report: @report} %>
<% elsif @report.report_type == 'sprint-release' %>
  <%= render 'reports/sprint_release/sprint_release', locals: {report: @report} %>
<% end %>

<%= @data %>